ValueLabel.Parent = Frame

local FreezeBtn = Instance.new("TextButton")
FreezeBtn.Size = UDim2.new(0.37, 0, 0, 30)
FreezeBtn.Position = UDim2.new(0.1, 0, 0.8, 0)
FreezeBtn.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
FreezeBtn.Text = "Freeze Data"
FreezeBtn.TextColor3 = Color3.fromRGB(255,255,255)
FreezeBtn.Font = Enum.Font.GothamMedium
FreezeBtn.TextSize = 16
FreezeBtn.Parent = Frame

local UICornerBtn = Instance.new("UICorner", FreezeBtn)
UICornerBtn.CornerRadius = UDim.new(0, 8)

local RejoinBtn = Instance.new("TextButton")
RejoinBtn.Size = UDim2.new(0.37, 0, 0, 30)
RejoinBtn.Position = UDim2.new(0.53, 0, 0.8, 0)
RejoinBtn.BackgroundColor3 = Color3.fromRGB(255, 180, 0)
RejoinBtn.Text = "Rejoin"
RejoinBtn.TextColor3 = Color3.fromRGB(255,255,255)
RejoinBtn.Font = Enum.Font.GothamMedium
RejoinBtn.TextSize = 16
RejoinBtn.Parent = Frame

local UICornerRejoin = Instance.new("UICorner", RejoinBtn)
UICornerRejoin.CornerRadius = UDim.new(0, 8)

local Status = Instance.new("TextLabel")
Status.Text = "Ready"
Status.Font = Enum.Font.Gotham
Status.TextSize = 15
Status.TextColor3 = Color3.fromRGB(200,200,200)
Status.BackgroundTransparency = 1
Status.Size = UDim2.new(1,0,0,20)
Status.Position = UDim2.new(0,0,0.93,0)
Status.Parent = Frame

local frozen = false

local function freezeData()
    if frozen then return end
    frozen = true
    Status.Text = "Freezing data..."
    local mt = getrawmetatable(game)
    setreadonly(mt, false)
    local oldNamecall = mt.__namecall
    mt.__namecall = newcclosure(function(self, ...)
        local method = getnamecallmethod()
        if method == "FireServer" or method == "InvokeServer" then
            return nil
        end
        return oldNamecall(self, ...)
    end)
    local oldIndex = mt.__index
    mt.__index = newcclosure(function(self, key)
        if key == "FireServer" or key == "InvokeServer" then
            return function() end
        end
        return oldIndex(self, key)
    end)
    Status.Text = "Data frozen! You can now rejoin."
end

FreezeBtn.MouseButton1Click:Connect(freezeData)

RejoinBtn.MouseButton1Click:Connect(function()
    Status.Text = "Rejoining in 10 seconds..."
    wait(10)
    TPService:TeleportToPlaceInstance(game.PlaceId, game.JobId, LocalPlayer)
end)

ShowBtn.MouseButton1Click:Connect(function()
    local input = InputBox.Text
    if input == "" then input = "(none)" end
    ValueLabel.Text = "External Value: " .. tostring(input)
    Status.Text = "Value updated! (GUI only)"
end)

local UserInputService = game:GetService("UserInputService")
local dragging, dragInput, dragStart, startPos

Frame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = Frame.Position
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then dragging = false end
        end)
    end
end)

Frame.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement then
        dragInput = input
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        local delta = input.Position - dragStart
        Frame.Position = UDim2.new(
            startPos.X.Scale, startPos.X.Offset + delta.X,
            startPos.Y.Scale, startPos.Y.Offset + delta.Y
        )
    end
end)
