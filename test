  <script>
    let percent = 0;
    function animateLoading() {
      percent += Math.random() * 6 + 2; // random progression
      if (percent > 100) percent = 100;
      document.getElementById('barFill').style.width = percent + '%';
      document.getElementById('percentText').innerText = Math.floor(percent) + '%';
      if (percent < 100) {
        setTimeout(animateLoading, 400);
      } else {
        document.getElementById('percentText').innerText = 'Loaded!';
        // You can add code here to hide the loading screen or redirect
      }
    }
    animateLoading();
  </script>
